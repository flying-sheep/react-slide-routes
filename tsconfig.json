{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react",
    "jsxFactory": "jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  },
  "include": ["rollup.config.ts", "src/**/*"]
}
